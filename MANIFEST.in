# Include documentation and configuration files
include README.md
include LICENSE
include requirements.txt
include install.sh

# Include configuration templates
recursive-include config *.yaml *.yml

# Include systemd service template
recursive-include systemd *.service

# Include CSS files for TUI
recursive-include src/honeypot_monitor/tui *.tcss

# Include test data and fixtures
recursive-include tests *.py *.yaml *.log *.json

# Exclude development and build files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .pytest_cache
global-exclude *.egg-info
global-exclude build
global-exclude dist